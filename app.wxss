    margin-bottom:20rpx;
    font-family: "detail";
    font-size: 108rpx;
    color: #a1c6f5;
    text-align: center;
}
/*错误提示*/
.err-pop{
  position:fixed;
  display: flex;
  top:0;
  right:0;
  bottom:0;
  left:0;
  justify-content: center;
  align-items: center;
  background-color:rgba(0,0,0,.4);
  z-index:15;
}
.err-content{
  width:500rpx;
  border-radius: 20rpx;
  background-color:#fff;
}
.err-text{
  padding:40rpx 64rpx;
  line-height:40rpx;
  font-size: 28rpx;
  color: #333333;
  justify-content: center;
  align-items:center;
  text-align: center;
  border-bottom:1rpx solid #eee;
}
.highlight{
  color:#448dea;
}
.err-button{
  display: flex;
  height:88rpx;
  font-size: 32rpx;
  color: #1571E5;
  justify-content: center;
  align-items:center;
}