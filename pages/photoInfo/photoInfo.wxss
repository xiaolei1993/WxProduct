/* pages/photoInfo/photoInfo.wxss */
page{
  height: 100%;
  overflow: hidden;
}
.photo-info{
  position: relative;
  height: 100%;
  background: #222;
}
.options{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: center;
}
.option{
  padding: 0 32rpx;
}
.option text{
  font-size: 28rpx;
  color: rgba(255,255,255,.5);
}
.option .option-text{
  color:#fff;
}
.img-list{
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  margin-top: -300rpx;
}
.img-swiper{
  height: 500rpx;
}
.footer-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #111;
}
.truck-info{
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 0 150rpx 0 30rpx;
}
.truck-name{
  display: block;
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.price-text{
  font-size: 24rpx;
}
.footer-price{
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  width: 120rpx;
  height: 64rpx;
  line-height: 60rpx;
  border-radius: 4rpx;
  text-align: center;
  background: #1571e5;
}
.footer-price text{
  font-size: 28rpx;
  color: #fff;
}
.indicator{
  margin-top: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
.current{
  font-size:32rpx;
}
.between{
  margin: 0 10rpx;
}