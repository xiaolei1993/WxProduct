.other-concerns{
  margin-top: 20rpx;
}
.header-name{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.header-name > text{
  font-weight: bold;
  overflow: hidden;
}
.other-content{
  padding-left: 24rpx;
  background: #fff;
}
.other-list{
  position: relative;
  min-height: 120rpx;
  padding: 30rpx 30rpx 30rpx 200rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.other-list:last-child{
  border: none;
}
.other-image{
  position: absolute;
  top: 30rpx;
  left: 0;
  z-index: 1;
}
.other-image:before{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: -1;
  text-align: center;
  font-family: "detail";
  content: "\5361";
}
.truck-message .head{
  display: block;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.truck-price .price-text{
  font-size: 28rpx;
  color: #f60;
}
.truck-price{
  margin-top: 10rpx;
  overflow: hidden;
}
.truck-price .ask-price{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  height:56rpx;
  line-height:56rpx;
  padding:0 25rpx;
  font-size: 28rpx;
  color: #f60;
  vertical-align: middle;
}
.truck-price .ask-price:after{
  font-family: "detail";
  content: "\53bb";
  font-size: 24rpx;
  margin-left: 10rpx;
}