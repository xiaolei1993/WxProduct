.title-name{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 0 20rpx 0 30rpx;
  margin-top: 20rpx;
}
.title-name > text{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.sell-state-sum{
  display: inline-block;
  margin-left: 20rpx;
}
.sell-state{
  float: right;
}
.sell-state > text{
  display: inline-block;
  font-size: 28rpx;
  color: #999;
  padding: 0 10rpx;
  margin-right:10rpx;
}
.sell-state > .sell-state-visible{
  height:80rpx;
  color:#f60;
  box-sizing: border-box;
  border-bottom:4rpx solid #f60;
}

.content{
  width: 100%;
  box-sizing: border-box;
}
.options{
  width: 100%;
  padding: 10rpx;
  background: #fff;
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.option{
  width: 25%;
  display: block;
}
.option > text{
  display: block;
  margin: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}
.option > .option-visible{
  color:#586c94;
  border-color:#586c94;
}
.wrapper{
  background: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.model-list{
  border-bottom: 2rpx solid #e5e5e5;
}
.model-list:last-child{
  border: none;
}
.truck-info{
  position: relative;
  padding: 30rpx 0 20rpx 0;
}
.title{
  /* display: flex; */
  /* flex-direction:row; */
}

.title > text{
  /* display: block; */
  font-size: 28rpx;
  color: #333;
}
.title > .truck-name-tag{
    margin-right: 20rpx;
    color: #448dea;
    font-size: 24rpx;
}
.guide-price{
  margin-top: 12rpx;
  overflow: hidden;
}
.guide-price > text{
  font-size: 24rpx;
  color: #999;
}
.tags{
  float: right;
  display: inline-block;
}
.tags > text{
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.action{
  position: relative;
  height: 64rpx;
  margin-top: 20rpx;
}
.hot-price{
  font-size: 28rpx;
  color: #f60;
}
.comparison{
  position: absolute;
  right: 0;
  bottom: 0;
  height: 64rpx;
}
.foot-price{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  padding: 0 30rpx;
  border: 2rpx solid #586c94;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #586c94;
}
.compare{
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #586c94;
}
.compare:before{
  font-family: "detail";
  content: "\52a0";
  margin-right: 6rpx;
  vertical-align: middle;
}
.compare-join:before{
 content: "";
}
.load-more{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
.load-more text:after{
  margin-left: 10rpx;
  font-family: "detail";
  content: "\4e0b";
  vertical-align: middle;
}