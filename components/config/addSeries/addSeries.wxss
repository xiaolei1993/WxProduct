.add-series{
  position: fixed;
  left:0;
  right:0;
  top:0;
  bottom:0;
  /*transform: translate(750px, 0);*/
  background: #f5f5f5;
  z-index: 12;
}
.nav{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 2rpx solid #eee;
}
.nav .nav-text{
  font-size: 28rpx;
  color: #999;
}
.current{
  font-size: 32rpx;
  color: #586c94;
}
.hot,.brand,.contrast-record{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.wrapper{
  display: flex;
  width: 2250rpx;
  flex-direction: row;
}
.hot-module{
  width: 750rpx;
  margin-top: 20rpx;
}
.hot-list{
  background: #fff;
}
.hot-recommend-model{
  flex: 1;
  flex-direction: row;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}
.hot-recommend-model:last-child{
  border: none;
}
.choose{
  font-size: 28rpx;
  color: #1571e5;
}
.hot-model-text{
  line-height: 44rpx;
  font-size: 28rpx;
  color: #999;
}
.empty{
  padding: 50rpx 0;
  text-align: center;
  background: #fff;
}
.empty text:first-child{
  font-family: 'detail';
  color: #a1c6f5;
  font-size: 100rpx;
}
.empty-text{
  display: block;
  color: #999;
  font-size: 32rpx;
  padding-top: 20rpx;
}
.recommend > .header{
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1571e5;
}
.recommend-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #fff;
}
.recommend-info{
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
  box-sizing: border-box;
  overflow: hidden;
  text-align: center;
}
.recommend-info:nth-child(n+5){
  border: none;
}
.recommend-img{
  position: relative;
  z-index: 1;
}
.recommend-img:before{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: -1;
  font-family: "detail";
  content: "\5361";
}
.recommend-img > image{
  width:120rpx;
  height: 80rpx;
  background: #fff;
}
.recommend-info > text{
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  margin-top: 12rpx;
  overflow: hidden;
}
.brand-list .truck-list:last-child .truck-number{
  border: none;
}
.brand-list .title{
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color:#666;
}
.truck-model{
  background: #fff;
  padding-left: 20rpx;
}
.truck-number{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom:2rpx solid #eee;
}
.brands-img{
  position: relative;
  width: 120rpx;
  height: 80rpx;
  z-index: 1;
  display: inline-block;
}
.brands-img:before{
  position: absolute;
  top: 12rpx;
  left: 0;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #d1d1d1;
  background: #efefef;
  z-index: -1;
  font-family: "detail";
  content: "\5361";
  text-align: center;
}
.brands-img > image{
  width:120rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  background: #fff;
}
.truck-number text{
  font-size: 32rpx;
  color: #333;
}
.contrast-page{
  margin-top: 20rpx;
}
.contrast-list{
  background: #fff;
}
.contrast-recommend-model{
  position: relative;
  padding: 0 100rpx 0 40rpx;
}
.contrast-ico{
  position: absolute;
  top: 50%;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
  color: #ccc;
  margin-top: -50rpx;
  font-family: "detail";
  content: '\53c9';
}
.contrast-letters{
  padding: 30rpx 0;
}
.contrast-letters text{
  font-size: 28rpx;
  color: #333;
}
.contrast-letters .shoose{
  color: #1571e5;
}
.clear-all{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  margin-top: 24rpx;
}
.empty-model:before{
  display: block;
  width: 100%;
  text-align: center;
  line-height: 120rpx;
  color: #9bc0ef;
  font-size: 80rpx;
  content: "\65e0";
  font-family: "detail";
  vertical-align: middle;
  margin: 200rpx auto 0;
}
.empty-model text{
  display: block;
  height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}