.statement-wrapper{
    position:fixed;
    left:100%;
    top:0;
    width:100%;
    height:100%;
    background-color:#fff;
    z-index:15;
    transition: all .3s;
}
.statement-wrapper.visible{
  left:0;
}
.title{
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #eee;
  padding: 0 150rpx;
  text-align: center;
  background: #fff;
}
.title .back{
  position: absolute;
  top: 0;
  left: 0;
  width: 88rpx;
  height: 88rpx;
  text-align: center;
  font-family: "detail";
  color: #999;
}
.title text{
  font-size: 36rpx;
  color: #333;
}
.statement-model{
    padding:30rpx 30rpx 0;
}
.statement-header{
    margin-bottom:20rpx;
    font-size: 32rpx;
    color: #586C94;
}
.statement-info text{
    display: flex;
    flex: 1;
    margin-bottom:20rpx;
    font-size: 28rpx;
    color: #333333;
    line-height:40rpx;
}
.statement-employ{
    padding:10rpx 30rpx 0;
}
.statement-employ .statement-info text{
    margin-bottom:0;
}
.correct text{
    font-size: 28rpx;
    color: #333333;
}
.correct .phone{
    color:#f60;
    text-decoration: underline;
    white-space: nowrap;
}
.last-model{
  margin-bottom:30rpx;
}