.picture{
  position: relative;
  margin-top:20rpx;
  height:480rpx;
}
.picture-list image{
  width: 100%;
  height:480rpx;
  vertical-align: middle;
}
.not-img{
  height:500rpx;
  text-align: center;
  line-height: 700rpx;
  font-size:28rpx;
  color:#999;
  background-color:#fff;
}
.ranking{
  position: absolute;
  right: 0;
  top: 0;
  width: 212rpx;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.ranking:before{
  float: left;
  width: 60rpx;
  font-size: 42rpx;
  color: #ff8533;
  content: '\6392';
  font-family: 'detail';
}
.ranking .ranking-icon:before{
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 24rpx;
  height: 40rpx;
  content: '\e603';
  font-family: 'detail';
  color: #fff;
  font-size: 24rpx;
  z-index: 10;
}
.ranking .ranking-text{
  float: right;
  background: #ff8533;
  width: 152rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
.price{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  color: #fff;
  font-size: 24rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-image: linear-gradient(to bottom,rgba(255, 255, 255, 0) 0,rgba(0, 0, 0, .9));
  background-image: -webkit-linear-gradient(to bottom,rgba(255, 255, 255, 0) 0,rgba(0, 0, 0, .9));
}
.price .price-text{
  font-size: 32rpx;
}

.price .not-price{
  font-size:24rpx;
}
.price .picture-text{
  float: right;
}